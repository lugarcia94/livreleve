.layout
    display         : flex
    justify-content : space-between
    align-items     : stretch

    &__left
        position    : absolute

    &__main
        flex        : 1 1 auto
        min-width   : 0


@media (min-width: 992px)
    .layout
        &__left
            flex        : 0 0 275px
            position    : static
            max-width   : 275px



