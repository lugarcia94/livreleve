#header
#menu
#minicart
    display: none !important

.product 

    &__container
        @extend $container
        display: flex
        align-items: flex-start

    &__content--left
        display: grid
        grid-template-areas: "foto breadcrumb" "foto name" "foto content"
        grid-template-rows: 30px 50px auto;
        max-width: calc(100% - 205px);
        grid-template-columns: 442px auto;
        width: 100%

    &__content--right
        width: 205px

    &__image 
        grid-area: foto
        max-width: 442px
        min-width: 442px

    &__breadcrumb 
        grid-area: breadcrumb
        width: 100%
        max-height: 30px
        overflow: hidden
        
    &__name  
        grid-area: name
        max-height: 50px
        overflow: hidden
        font-size: 24px
        line-height: 24px
        font-weight: 300
        color: color[1]

    &__content-inner
        grid-area: content

    &__review
        display: flex
        align-items: center
        .review--short
            width: 125px

        .product__code
            font-size: 14px
            color: #A8A8A8
            letter-spacing: -0.25px
            line-height: 15px
            display: flex
            &:before 
                content: 'Cod: '
                display: flex
                margin: 0 5px 0 0

    // &__label
    //     grid-area: label

    &__description--short
        font-size: 14px
        color: #A8A8A8
        letter-spacing: -0.25px
        line-height: 15px
        padding: 10px 0

    &__description-more
        border: none
        cursor: pointer
        background: none 
        font-size: 12px
        color: color[0]
        letter-spacing: -0.22px
        padding: 5px 0

    &__variations
        ul 
            margin: 0 -5px
            li 
                display: flex
                flex-wrap: wrap

                label
                    box-shadow: 0 0 0 1px #E9E9E9
                    display: inline-block
                    margin: 5px
                    font-size: 0
                    transition: transition[0]
                    cursor: pointer

                input 
                    display: none
                    &:checked
                        + label 
                            box-shadow: 0 0 0 2px color[0]


            .specification
                font-size: 14px
                color: #A8A8A8
                letter-spacing: -0.25px
                line-height: 15px
                margin: 0 0 0 5px

        &--selected
            font-size: 14px
            color: #333333
            margin: 5px 0
            display: block

    &__shipping
        margin: 10px 0 0 0
        &:before 
            content: 'Calcule o seu Frete e prazo de entrega'
            margin: 0 0 10px 0
            display: block
            font-size: 14px
            line-height: 14px
            color: #A8A8A8
            letter-spacing: -0.25px
            [data-status="false"] & 
                display: none

        .frete
        .quantity
        .footer
        .header
            display: none

        

        .prefixo
            font-size: 0
            line-height: 0
            width: 100%
            input
                background: #FFFFFF
                border: 1px solid #F0F0F0
                border-radius: 3px
                color: #333333
                font-size: 14px
                height: 30px
                padding: 0 10px 
                width: 100px

        .cep-busca
            a
                font-size: 14px
                color: #A8A8A8
                letter-spacing: -0.25px
                line-height: 15px
                padding: 5px 0
                width: 100%
                display: inline-block

        fieldset
            position: relative 
            width: 185px

        .frete-calcular 
            display: flex
            align-items: center
            justify-content: center
            background: #333333
            border-radius: 2px
            // margin: 0 0 0 10px
            font-size: 14px
            color: #DEB94C
            letter-spacing: -0.25px
            position: absolute
            right: 0
            top: 0px
            height: 30px
            width: 80px
            &:before
                font-weight: 600
                content: 'CALCULAR'

            #btnFreteSimulacao
                border: none 
                font-size: 0
                line-height: 0
                position: absolute
                left: 0
                right: 0
                top: 0
                bottom: 0
                width: 100%
                opacity: 0




    &__price-inner
        border: 1px solid #E9E9E9
        border-radius: 2px
        padding: 5px 

        .buy-button 
            background: #84DD4B
            border-radius: 2px
            font-size: 16px
            color: #FFFFFF
            letter-spacing: -0.29px
            text-transform: uppercase
            font-weight: 800
            display: flex !important
            align-items: center
            justify-content: center
            height: 40px
            width: 100%
            text-shadow: 0 1px 2px #67B932
            text-decoration: none
            [data-status="false"] &
                display: none !important

            
        .buttons
            &__qtys 
                [data-status="false"] &
                    display: none !important

            &__actions
                max-width: 147px
                width: 100% 
                margin: 15px auto
                display: flex
                align-items: center
                justify-content: center
                &:before
                    content: 'Quantidade'
                    font-size: 14px
                    color: #A8A8A8
                    letter-spacing: -0.25px
                    display: inline-block
                    margin-right: 5px

            &__input
                background: #FFFFFF
                border: 1px solid #F0F0F0
                border-radius: 3px
                font-size: 15px
                color: #333333
                letter-spacing: -0.27px
                height: 30px
                width: 30px
                text-align: center

            &__action
                cursor: pointer
                padding: 0
                border: none
                min-width: 30px
                min-height: 30px
                // margin: 0 5px

                &:before 
                    content: ''
                    background: #DEB94C
                    display: block
                    border-radius: 50%
                    width: 16px
                    height: 16px
                    margin: 0 auto
                    color: #fff

                   


                &--less
                    &:before 
                        content: '-'
                        font-size: 30px
                        line-height: 12px
                        font-weight: 600

                &--more
                    &:before 
                        content: '+'
                        font-size: 16px
                        line-height: 14px
                        font-weight: 800


  
