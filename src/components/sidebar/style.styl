.sidebar

    &__container
        position            : fixed
        top                 : 0
        left                : 0
        z-index             : 100

        width               : 100%
        height              : 100%

        background          : rgba(0,0,0,.5)

        transition          : transition[0]

        opacity             : 0
        visibility          : hidden

        .sidebar--open &
            opacity         : 1
            visibility      : visible

    &__header, &__main
        width               : 320px
        max-width           : 90vw

        background          : #fff

        transition          : transition[0]
        transform           : translate3d(-100%, 0, 0)

        .sidebar--open &
            transform       : translate3d(0, 0, 0)


    &__header
        display             : flex
        height              : 50px
        justify-content     : space-between
        align-items         : center

        font-size           : 14px
        font-weight         : bold

        text-transform      : uppercase

        background          : color[0]
        color               : #fff

        padding-left        : 15px


    &__main
        height              : calc(100% - 50px)
        overflow            : auto


    &__button

        svg
            width           : 20px
            height          : 20px

            fill            : #fff

        &--close

            width           : 50px
            height          : 50px

            border          : 0

            background      : color[1]
            color           : #fff


        &--open
            position            : fixed
            bottom              : 20px
            right               : 20px
            z-index             : 50

            width               : 45px
            height              : 45px

            border              : 0
            border-radius       : 50%

            background          : color[0]

.menu-navegue
    padding                     :  0 13px
    display                     : flex

    a
        flex                    : 1 1 auto

        display                 : flex
        justify-content         : center
        align-items             : center
        height                  : 30px

        border                  : solid 1px #F7F7F7
        border-radius           : 2px
        margin                  : 2px

        font-size               : 14px
        font-weight             : semi-bold

        text-decoration         : none

        background              : #F7F7F7
        color                   : color[0]


        &[title="Refinar Resultado"]
            font-size           : 0

            &:before
                content         : 'Filtrar'
                font-size       : 14px

        &.tab-refinar-ativo, &.tab-navegue-ativo
            background          : #fff


.search-single-navigator
    padding                     : 15px

    a
        font-size               : 12px
        font-weight             : semi-bold

        color                   : color[1]

    h3 a
        font-size               : 15px
        font-weight             : regular

        color                   : color[1]

    h5:not(first-child)
        margin-top              : 15px




.search-multiple-navigator
    padding                     : 15px

    h3
        display                 : none

    h4 a
        font-size               : 15px
        font-weight             : regular

        color                   : color[1]

    label
        display                 : block
        font-size               : 12px
        font-weight             : semi-bold

        color                   : color[1]

    h5:not(first-child)
        margin-top              : 15px


.search-filter-button
    display                     : flex
    justify-content             : center
    align-items                 : center

    height                      : 35px
    margin-top                  : 15px
    border-radius               : 2px

    font-size                   : 14px
    font-weight                 : bold

    text-transform              : uppercase

    background                  : color[1]
    color                       : color[0]

    &:hover
        text-decoration         : none

@media (min-width: 992px)
    .sidebar__button--open
        display                     : none

    .menu-navegue
        padding                     : 0

    .search-single-navigator, .search-multiple-navigator
        padding-left                : 0
        padding-right               : 0

    .sidebar
        &__container
            position                : static

            background              : none

            visibility              : visible
            opacity                 : 1

        &__header
            display                 : none

        &__header, &__main
            max-width               : 225px

            transform               : translate3d(0,0,0)
