.header
    position            : fixed
    top                 : 0
    left                : 0
    z-index             : 300

    width               : 100%

    transition          : transition[0]

    &:before
        content         : ''

        position        : absolute
        top             : 0
        left            : 0
        z-index         : 20

        width           : 100%
        height          : 100%

        background      : rgba(255,255,255, .85)

    .scrolling &
        transform       : translate3d(0, -40px, 0)

    .scrolling:not(.scrolling--top) &
            border-bottom   : solid 1px '%s' % lighten(color[0], 80%)

    &__head-nav
        display         : none

    &__container
        @extend         $container
        display         : flex

        padding         : 10px 0

        &--menu
            padding     : 0

    &__logo, &__button-menu, &__cart, &__head-nav
        position        : relative
        z-index         : 30

    &__logo
        flex            : 1 1 auto

        display         : flex
        justify-content : center
        align-items     : center

        padding         : 0 20px

    &__search
        position        : absolute
        top             : 100%
        left            : 0
        z-index         : 10

        width           : 100%

        transition      : transition[0]


        .scrolling:not(.scrolling--top) &
            transform   : translate3d(0, -100%, 0)
            opacity     : 0
            visibility  : hidden

@media (min-width: 992px)
    .header
        &__search
            position    : relative
            top         : auto
            left        : auto

            z-index     : 30

            max-width   : 360px


            .scrolling:not(.scrolling--top) &
                transform   : none
                opacity     : 1
                visibility  : visible

        &__head-nav
            display         : block

        &__menu
            position    : absolute
            top         : 100%
            left        : 0

            width       : 100%

            transition  : transition[0]

            .scrolling:not(.scrolling--top) &
                transform   : translate3d(0, -100%, 0)
                opacity     : 0
                visibility  : hidden

        &__button-menu
            display         : none