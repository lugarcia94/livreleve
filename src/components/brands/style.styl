.brands
    padding-top: 40px
    padding-bottom: 47px
    &__container
        max-width: 1300px
        width: 100%
        padding: 0 15px
        margin: 0 auto
    &__title
        color: #453F3F
        font-size: 35px
        line-height: 42px
        font-weight: 300
        margin-bottom: 20px
    &__list
        background-color: #F3ECF2
        padding: 15px 0
        border-radius: 5px
    &__item
        img 
            display: block
            margin: 0 auto
    .slick-track
        display: flex
        align-items: center
        justify-content: center
    .slick-arrow
        top: 50%
        transform: translateY(-50%)
    .slick-prev
        left 0
        background: none
        padding: 0
        z-index 1
    .slick-next
        right 0
        background: none
        padding: 0
        z-index 1
    .slick-list
        padding: 0 20px