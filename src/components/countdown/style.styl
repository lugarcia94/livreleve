icon = 'data:image/png;base64,'

.countdown 
    position: absolute 
    top: 15px 
    left: 50%

    display: inline-block
    padding: 5px 
    border-radius: 7px

    font-size: 13px
    font-weight: bold 

    background: #F74646
    color: #FFC928

    transform: translateX(-50%)

    &:before 
        content: 'Faltam: '
        font-size: 13px
        font-weight: regular 
        margin-right: 5px
        color: #fff

    &__label 
        font-size: 0
        &:before 
            content: ':'
            font-size: 13px

    &__item
        &--seconds, &--days
            .countdown__label:before 
                display: none 

        &--days
            margin-right: 5px


.offer-day
    [data-countdown=true]
        &.showcase__item
            padding-bottom: 60px

    .countdown 
        top: auto 
        bottom: 0 

        display: flex 
        justify-content: center 
        align-items: center 
        width: 100%
        height: 50px
        border-radius: 0 0 7px 7px

        &:before 
            content: ''
            background-image: url(icon)
            background-repeat: no-repeat
            background-size: 100% 100% 
            width: 20px
            height: 20px
            display: inline-block

        &__item 
            display: flex 
            justify-content: center 
            align-items: center
            padding: 0 5px

        &__number 
            font-size: 24px
            font-weight: bold 
            color: #FFC928

        &__label 
            display: inline 
            padding: 0 5px
            font-size: 13px
            font-weight: medium 

            text-transform: uppercase

            color: #fff 

            &:before 
                display: none 

.product__container
    .countdown 
        top: 0 
        display: flex 
        justify-content: center 
        align-items: center
        
        width: 100%
        height: 50px
        border-radius: 7px 7px 0 0
        padding: 5px 0

        font-size: 15px
        white-space: nowrap

        &:before, &:after 
            font-size: 12px

        &:before 
            content: 'Faltam '

        &:after 
            content: ' para o fim da promoção'
            font-size: 13px
            font-weight: regular 
            color: #fff
            margin-left: 5px

    [data-countdown=true]
        padding-top: 60px