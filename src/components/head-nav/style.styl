#orders-page 
    ul.head-nav__sub 
        padding             : 20px 

        p 
            margin-bottom   : 0

    a 
        color               : color[1]
        font-style          : normal

.head-nav
    display                 : flex
    justify-content         : space-between
    align-items             : center
    height                  : 100%
    max-width               : 3540px
    width                   : 100%

    .welcome
        font-size           : 0

        a
            color: #333
            &:before
                content         : 'Fazer login'
                font-size       : 13px

            &[href*=logout]
                &:before
                    content     : 'Sair'

    &__sub
        position            : absolute
        top                 : 100%
        left                : 0

        min-width           : 250%

        padding             : 20px
        border-radius       : 3px

        font-size           : 13px
        font-weight         : regular

        background          : #fff
        color               : color[1]
        border              : solid 1px #ffe7a7

        visibility          : hidden
        opacity             : 0

        transition          : transition[0]


    &__link
        .head-nav__item--lv1 > &
            display             : flex
            align-items         : center

            min-height          : 45px

            font-size           : 12px
            font-weight         : 600

            line-height         : 12px

            text-transform      : uppercase

            color               : #888

            &[href*="#"]
                pointer-events: none

            &:hover
                text-decoration : none

    &__item
        &--lv1
            position            : relative
            margin-right        : 20px

            &:after
                content         : ''
                position        : absolute
                top             : 100%
                left            : 0

                width           : 100%
                height          : 1px
                max-width       : 0

                background      : color[0]

                opacity         : 0

                transition      : transition[0]

            &:hover
                &:after
                    opacity         : 1
                    max-width       : 100%

            &:nth-child(3)
                > a
                    &:before
                        font-icon          : url('./svg/zap.svg')
                        font-size          : 20px
                        margin-right       : 3px
                        color              : #2cb742

            &:nth-child(2)
                > a
                    &:before
                        font-icon          : url('./svg/pack.svg')
                        font-size          : 20px
                        margin-right       : 3px
                        color              : color[2] 

            &:nth-child(1)
                > a
                    &:before
                        font-icon          : url('./svg/user.svg')
                        font-size          : 20px
                        margin-right       : 3px
                        color              : color[2] 
        &--lv2

            + .head-nav__item--lv2
                margin-top          : 10px

            > a
                font-size           : 13px
                font-weight         : regular

                line-height         : 1

                color               : color[1]



    [dropdown=true]

 

        &:hover

            .head-nav__sub
                visibility    : visible
                opacity       : 1


.head-nav__sub
    display                 : flex
    flex-flow               : column nowrap

    > .head-nav__item
        order               : 1

        .logout &:first-child
            order           : 2
            margin-top      : 10px

        .logout &:nth-child(2)
            margin-top      : 0

.contact
    > span 
        display: flex 
        align-items: center
        width 100%
        line-height: 23px

    .contact-item_tel , .contact-item_wts
        font-size: 16px
        color #434343
        font-weight: 600

    .contact-item_skype, .contact-item_mail
        font-size: 13px
        color: #434343
        font-weight: 600

    .contact-item_tel
        &:before
            font-icon          : url('./svg/fone.svg')
            font-size          : 16px
            margin-right       : 3px
            color              : color[0] 

    .contact-item_wts
        &:before
            font-icon          : url('./svg/zap2.svg')
            font-size          : 16px
            margin-right       : 3px
            color              : color[0] 

    .contact-item_mail
        &:before
            font-icon          : url('./svg/mail.svg')
            font-size          : 13px
            margin-right       : 3px
            color              : color[0] 

    .contact-item_skype
        &:before
            font-icon          : url('./svg/skype.svg')
            font-size          : 16px
            margin-right       : 3px
            color              : color[0] 
