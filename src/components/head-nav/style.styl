#orders-page
    ul.head-nav__sub
        padding             : 20px

        p 
            margin-bottom   : 0

    a 
        color               : color[1]
        font-style          : normal

.head-nav
    display                 : flex
    justify-content         : space-between
    align-items             : center
    height                  : 100%
    max-width               : 3540px
    width                   : 100%

    a#login
        display: block
        font-size: 15px
        font-weight: 300
        &:after
            font-icon          : url('./svg/dropdown.svg')
            font-size          : 7px
            margin-left        : 2px
            color              : #C2C2C2
    .welcome
        color: color[1]
        font-size: 13px
        cursor: pointer
        a
            text-decoration: none
            &[href*="logout"]
                color: color[1]
                font-size: 0px
                display: block
                transition: all .3s
                &:before
                    content: 'Sair'
                    font-size: 13px
                    display: block
                &:hover
                    color: color[2]
        

    &__sub
        position            : absolute
        top                 : 160%
        left                : 50%
        padding             : 30px 20px
        border-radius       : 7px

        font-size           : 13px
        font-weight         : regular

        background          : #fff
        color               : color[1]

        visibility          : hidden
        opacity             : 0

        transition          : transition[0]
        transform           : translateX(-50%)

        box-shadow          : 0 0 5px 0 rgba(0,0,0,0.20)

        &:before
            content: ''
            display: block
            position: absolute
            width: 26px
            height: 26px
            background: #fff
            top: -10px
            left: 50%
            transform: translateX(-50%) rotate(45deg)
            box-shadow: 0 0 5px 0 rgba(0,0,0,0.2)
            border-radius: 7px
        &:after
            content: ''
            display: block
            position: absolute
            width: 85%
            height: 26px
            background-color: #ffffff
            top: 0px

    &__link
        .head-nav__item--lv1 > &
            display             : flex
            align-items         : center

            font-size           : 13px
            line-height         : 15px 
            font-weight         : 400

            color               : #453F3F

            &[href*="#"]
                pointer-events: none

            &:hover
                text-decoration : none

            >div span 
                display: block

    &__dropdown-icon
        font-size: 14px
        font-weight: 300px
        line-height: 17px
        &:after
            font-icon          : url('./svg/dropdown.svg')
            font-size          : 7px
            margin-left        : 2px
            color              : #C2C2C2
    &__item
        &--lv1
            position            : relative
            margin-right        : 20px
            display             : flex
            align-items         : center
            &:hover
                &:after
                    opacity         : 1
                    max-width       : 100%

            // &:nth-child(3)
            //     > a
            //         &:before
            //             font-icon          : url('./svg/zap.svg')
            //             font-size          : 20px
            //             margin-right       : 3px
            //             color              : #2cb742

            &:nth-child(2)
                > a
                    &:before
                        font-icon          : url('./svg/question.svg')
                        font-size          : 30px
                        margin-right       : 5px
                        color              : color[2]
                // .head-nav__sub
                //     left: -45%!important

            &:nth-child(1)
                &:before
                    font-icon          : url('./svg/user.svg')
                    font-size          : 30px
                    margin-right       : 5px
                    color              : color[2]
        &--lv2

            + .head-nav__item--lv2
                margin-top          : 10px

            > a
                font-size           : 13px
                font-weight         : regular

                line-height         : 1

                color               : color[1]



    [dropdown=true]

 

        &:hover

            .head-nav__sub
                visibility    : visible
                opacity       : 1


.head-nav__sub
    display                 : flex
    flex-flow               : column nowrap

    > .head-nav__item
        order               : 1

        .logout &:first-child
            order           : 2
            margin-top      : 0
            border-top: 0

        .logout &:nth-child(2)
            margin-top      : 0

.contact
    > span 
        display: flex 
        align-items: center
        width 100%
        line-height: 23px
    
    &-item_call
        font-size: 17px
        color: #453F3F
        line-height: 18px
        padding-bottom: 13px
        &:after
            font-icon          : url('./svg/lk.svg')
            font-size          : 19px
            margin-left        : 7px
            color              : color[0] 

    .contact-item_tel , .contact-item_wts
        font-size: 16px

    .contact-item_skype, .contact-item_mail
        font-size: 13px

    .contact-item_tel , .contact-item_wts, .contact-item_skype, .contact-item_mail
        color: #434343
        font-weight: 600
        a 
            color: color[0]
            font-size: 15px
            line-height: 20px
            transition: all .3s
            &:hover
                color: color[2]
                text-decoration: none

    .contact-item_tel
        &:before
            font-icon          : url('./svg/fone.svg')
            font-size          : 16px

    .contact-item_wts
        &:before
            font-icon          : url('./svg/zap2.svg')
            font-size          : 16px

    .contact-item_mail
        a
            color: color[2]
            &:hover
                color: color[0]
                text-decoration: none
        &:before
            font-icon          : url('./svg/mail.svg')
            font-size          : 13px
            color              : color[2]!important
    
    .contact-item_time
        font-size: 13px
        color: #8B8A8A
        line-height: 20px

    .contact-item_social
        padding-top: 15px
        font-size: 14px
        line-height: 18px
        color: #453F3F
        display: block

    .contact-item_social-list
        display: flex
        align-items: center
        a
            display: flex
            align-items: center
            justify-content: center
            width: 40px
            height 40px
            border-radius: 50%
            background: #F3ECF2
            margin-right 9px
            margin-top: 5px
            text-decoration: none
        .contact-item_social-facebook
            &:before
                font-icon          : url('./svg/facebook.svg')
                font-size          : 20px
                line-height        : 20px 
                color              : color[2]
        .contact-item_social-instagram
            &:before
                font-icon          : url('./svg/instagram.svg')
                font-size          : 20px
                line-height        : 20px 
                color              : color[2]
        .contact-item_social-youtube
            &:before
                font-icon          : url('./svg/youtube.svg')
                font-size          : 20px
                line-height        : 20px 
                color              : color[2]
        .contact-item_social-blog
            &:before
                font-icon          : url('./svg/blog.svg')
                font-size          : 20px
                line-height        : 20px 
                color              : color[2]


    .contact-item 
        &_tel, &_wts, &_mail, &_skype 
            &:before
                margin-right       : 7px
                color              : color[0] 

