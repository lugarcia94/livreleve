.copyright
    background          : #fff
    font-size           : 11px
    font-weight         : regular
    line-height         : 1.2
    color               : #A8A8A8

    &__container
        { container }
        display: flex
        align-items: center
        justify-content: space-between
        padding-bottom: 27px
        margin-bottom : 27px
        border-bottom: 1px solid #EDEDED
        @media(max-width : 475px)
            flex-wrap: wrap
            justify-content: center
        
    &__text, &__safe
        @media(max-width : 475px)
            flex: 1 1 100%

    &__title
        font-size: 12px
        color: #838383
        line-height: 14px
        padding-bottom: 5px

    &__sub
        font-size: 10px
        color: #838383
        line-height: 14px
