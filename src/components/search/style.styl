.header, .empty-search
    .search
        background           : #fff

        select, legend, label
            display          : none

        &__container
            border           : solid 1px color[2]

        fieldset
            position        : relative
            font-size       : 0


            &:after
                position           : absolute
                right              : 0
                top                : 0
                z-index            : 0

                display            : flex
                justify-content    : center
                align-items        : center
                width              : 40px
                height             : 40px

                font-icon          : url('./svg/search.svg')
                font-size          : 13px

                color              : color[0]


        [type=text]
            display         : inline-block
            vertical-align  : middle
            width           : calc(100% - 40px)
            height          : 40px
            padding-left    : 30px
            border          : 0

            font-size       : 14px
            font-weight     : regular

            line-height     : 40px


        [type=button]
            position        : relative
            z-index         : 20

            display         : inline-block
            vertical-align  : middle
            width           : 40px
            height          : 40px
            border          : 0

            background      : rgba(0,0,0,0)

            font-size       : 0

            cursor          : pointer



.ui-autocomplete
    padding-top: 25px
    z-index: 200 !important

    @media (max-width 991px)
        width: calc(100vw - 40px)
        max-width 1140px
        left 50%!important
        transform: translateX(-50%)
        padding-top: 20px
    @media (min-width 992px)
        max-width 400px
        right: -55% !important
        margin-top: 20px

    &:before
        content: ''
        background #fff
        top 20px
        left 0
        right 0
        bottom 0
        position absolute
        box-shadow: 0 0 5px rgba(0,0,0, .1)
        border-radius: 2px

    &:after
        content: ''
        width 10px
        height 10px
        background #fff
        border-radius: 2px
        left: 50%;
        margin-left: -10px;
        transform: rotate(45deg)
        position absolute
        top 15px

        box-shadow: -1px -1px 1px rgba(0,0,0, .1)

    li
        position relative
        z-index 2

    img
        margin-right 10px

    a
        display flex
        align-items center
        padding: 10px 20px
        font-size 13px
        font-weight 400
        color: #333

        &:hover
            text-decoration: none


    .ui-state-hover
        background: color[0]
        color #fff
