.breadcrumb 
    padding             : 30px 0

    .category &
        max-width       : calc(100% - 30px)
        margin          : 0 auto

    .product__breadcrumb &
        padding         : 0

    ul 
        display: flex
        flex-wrap: wrap
        align-items: flex-start
        &:before 
            content: 'VocÃª esta em:'
            font-weight: 300
            color: color[1]
            font-size: 13px
            line-height: 14px
            display: flex
            align-items: center
            margin: 0 5px 0 0

        li
        a
            color: color[1]
            display: flex
            align-items: center
            font-size: 14px
