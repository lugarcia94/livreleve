.rulers
    &__item

        height              : 30px

        font-size           : 14px
        font-weight         : regular

        text-align          : center

        color               : color[1]

        strong
            margin          : 0 3px

        &:before
            display         : inline-block
            width           : 25px
            vertical-align  : middle

            color           : color[0]

        &--frete-gratis
            &:before
                font-icon       : url('./svg/truck.svg')
                font-size       : 16px

        &--boleto
            &:before
                font-icon       : url('./svg/code.svg')
                font-size       : 17px

        &--cartao
            &:before
                font-icon       : url('./svg/card.svg')
                font-size       : 14px


    &__list
        display                 : flex
        align-items             : center

        .slick-arrow
            flex                : 0 0 45px

        .slick-list
            flex                : 1 1 auto

@media (min-width: 651px)
    .rulers
        .slick-track
            display             : flex
            justify-content     : space-between

        .slick-slide
            width               : auto !important


@media (min-width: 768px)
    .rulers
        &__item
            text-align          : left

        &__list
            display             : flex
            justify-content     : space-between
            padding             : 10px 0