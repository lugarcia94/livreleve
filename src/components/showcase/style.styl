.showcase
    h2
        visibility          : hidden

        &.showcase__title--actived
            visibility      : visible

    &__main
        text-align: left

    &__review
        display: flex
        justify-content: flex-start
        margin: 5px 0

    &__title
        margin-bottom       : 20px
        letter-spacing      : 0.6px
        color               : #434343
        font-weight         : 200
        text-align          : left
        font-size           : 40px 

        strong
            display         : block
            font-size       : 24px
            font-weight     : light
            color           : color[1]

    &__item
        position            : relative
        text-align          : center
        padding             : 15px

    &__image
        position            : relative

        img
            display         : inline-block

    &__name
        height              : 45px
        margin-bottom       : 10px
        text-align          : left 
        line-height         : 18px
        overflow            : hidden

    &__link
        display             : block

        &--name 
            letter-spacing  : 0.2px
            color           : #888888
            font-size       : 13px
            font-weight     : semi-bold 
            line-height     : 15px
            transition      : all 150ms ease-in-out 

            &:hover
                text-decoration: none 
                color: color[0]


    &__description
        height              : 52px
        margin-bottom       : 10px

        font-size           : 11px
        font-weight         : regular

        line-height         : 12px

        color               : #A8A8A8

        overflow            : hidden

    &__out
        padding             : 5px 15px
        font-size           : 14px
        font-weight         : bold
        text-transform      : uppercase
        background          : color[0] 
        display             : block
        text-align          : center
        color               : #fff

    &__container, [id*=ResultItems_]
        > div > ul:not(.slick-dotted):not(.slick-initialized)
            display                 : grid
            grid-template-rows      : 1fr
            grid-template-columns   : 1fr
            > li
                &.helperComplement
                    display     : none
            @media (min-width: 425px)
                grid-template-columns   : repeat(2, 1fr)
            @media (min-width: 768px)
                grid-template-columns   : repeat(3, 1fr)
        &:not([data-carousel])
            > div > ul
                margin          : -15px


        &[data-carousel]
            > div > ul:not(.slick-dotted)
                flex-wrap       : nowrap
                width           : 100%

                > li
                    min-width   : 234px

                    &.helperComplement
                        display : none


    &__prices
        .price
            &.valor-de, &.valor-por
                flex            : 0 0 auto
                padding         : 0 5px
    &__actions 
        position                : relative
        display                 : flex 
        padding-top             : 65px 
        margin-top              : 15px
    &__buy 
        margin-left             : 10px
        flex                    : 1 1 auto 
        min-width               : 0
    .buy-button
        width                   : 100% 
        &__qtd 
            display             : none 
        &__button 
            display             : flex 
            justify-content     : center 
            align-items         : center  
            width               : 100% 
            height              : 25px
            padding             : 0 10px
            border              : 0 
            border-radius       : 3px
            font-size           : 13px
            font-weight         : semi-bold 
            text-transform      : uppercase
            background          : #43C233
            color               : #fff
            cursor              : pointer
            &:disabled 
                background      : #eaeaea
        &__variants 
            position            : absolute
            top                 : 0 
            left                : 0 
            width               : 100% 
            .slick-list
                padding         : 0 
                margin          : 0
            .slick-slider[dir]
                padding         : 0 50px
        &__variant 
            border-radius       : 3px 
            overflow            : hidden
            text-align          : center 
            padding             : 1px 
            cursor              : pointer
            img 
                display         : inline-block
            &--actived 
                box-shadow      : inset 0 0 0 1px #FF7000
    &__quickview 
        order                   : -1
        display                 : none 
        a 
            display             : flex 
            justify-content     : center 
            align-items         : center 
            padding             : 0 10px  
            height              : 25px
            border              : 0 
            border-radius       : 3px        
            font-size           : 13px 
            font-weight         : semi-bold 
            text-transform      : uppercase
            background          : #FFE6AB
            color               : #434343

@media (max-width: 991px)
    .showcase__buy
        margin-left: 0
        
@media (min-width: 992px)
    [data-carousel]:hover 
        z-index                 : 10
    .showcase
        &__quickview
            display                 : block
        &__item:hover
            position                : relative
            z-index                 : 100
            background              : #fff

        &__actions 
            opacity                 : 0 
            visibility              : hidden 
            transition              : all .2s ease-in-out  
    
        &__item
            &:hover
                box-shadow          : inset 0 0 0 1px #FFE6AB
                .showcase__actions 
                    opacity         : 1 
                    visibility      : visible 
        .home & 
            margin-bottom           : -80px



