.showcase
    { container }
    h2
        visibility          : hidden

        &.showcase__title--actived
            visibility      : visible

    &__main
        text-align: left

    &__review
        display: flex
        justify-content: flex-start
        margin: 5px 0

    &__title
        margin-bottom       : 20px
        letter-spacing      : 0.6px
        color               : #434343
        font-weight         : 200
        text-align          : left
        font-size           : 40px 

        strong
            display         : block
            font-size       : 24px
            font-weight     : light
            color           : color[1]

    &__item
        position            : relative
        text-align          : center
        padding             : 15px

    &__image
        position            : relative

        img
            display         : inline-block

        .showcase__link
            padding-bottom: 30px

    &__name
        height              : 45px
        margin-bottom       : 10px
        text-align          : left 
        line-height         : 18px
        overflow            : hidden

    &__link
        display             : block

        &--name 
            letter-spacing  : 0.2px
            color           : color[1]
            font-size       : 13px
            font-weight     : 400 
            line-height     : 14px
            transition      : all 150ms ease-in-out 

            &:hover
                text-decoration: none 
                color: color[0]


    &__description
        height              : 52px
        margin-bottom       : 10px

        font-size           : 11px
        font-weight         : regular

        line-height         : 12px

        color               : #A8A8A8

        overflow            : hidden

    &__out
        padding             : 5px 15px
        font-size           : 14px
        font-weight         : bold
        text-transform      : uppercase
        background          : color[0] 
        display             : block
        text-align          : center
        color               : #fff

    &__container, [id*=ResultItems_]
        > div > ul:not(.slick-dotted):not(.slick-initialized)
            display                 : flex 
            flex-flow: row wrap
            > li
                width: 330px

                &.helperComplement
                    order: 2
                    display: none

        &:not([data-carousel])
            > div > ul
                margin          : -15px


        &[data-carousel]
            > div > ul:not(.slick-dotted)
                flex-wrap       : nowrap
                width           : 100%

                > li
                    min-width   : 234px

                    &.helperComplement
                        display : none


    &__prices
        .price
            &.valor-de, &.valor-por
                flex            : 0 0 auto
                padding         : 0 5px
    &__actions 
        position                : relative
        display                 : flex 
        // padding-top             : 65px 
        margin-top              : 15px
    &__buy 
        margin-left             : 10px
        flex                    : 1 1 auto 
        min-width               : 0
    .buy-button
        width                   : 100% 
        &__qtd 
            display             : none 
        &__button 
            display             : flex 
            justify-content     : center 
            align-items         : center  
            width               : 100% 
            height              : 30px
            padding             : 0 10px
            border              : 1px solid transparent
            border-radius       : 5px
            font-size           : 12px
            font-weight         : 500
            text-transform      : uppercase
            background          : #4CB6AC
            color               : #fff
            cursor              : pointer
            transition          : all .3s
            &:disabled 
                background      : #eaeaea
            &:not(:disabled):hover
                background      : #ffffff
                color           : #4CB6AC
                border-color    : #4CB6AC
        &__variants 
            position            : absolute
            top                 : 0 
            left                : 0 
            width               : 100% 
            .slick-list
                padding         : 0 
                margin          : 0
            .slick-slider[dir]
                margin          : 0 50px
            .slick-next
                top : 0 !important
        &__variant 
            border-radius       : 3px 
            overflow            : hidden
            text-align          : center 
            padding             : 1px 
            cursor              : pointer
            img 
                display         : inline-block
            &--actived 
                box-shadow      : inset 0 0 0 1px #FF7000
    &__quickview 
        order                   : -1
        display                 : none 
        a 
            display             : flex
            justify-content     : center
            align-items         : center
            padding             : 0 10px
            height              : 30px
            border              : 0
            font-size           : 12px
            font-weight         : 500
            text-transform      : uppercase
            background          : #ffffff
            color               : color[1]
            border              : 1px solid color[0]
            border-radius       : 5px
            transition          : all .3s
            &:hover 
                text-decoration: none 
                background: color[0]
                color: #fff 

@media (max-width: 991px)
    .showcase__buy
        margin-left: 0
        
@media (min-width: 992px)
    [data-carousel]:hover 
        z-index                 : 10
    .showcase
        &__quickview
            display                 : block
        &__item:hover
            position                : relative
            z-index                 : 50
            background              : #fff

        &__actions 
            opacity                 : 0 
            visibility              : hidden 
            transition              : all .2s ease-in-out  
    
        &__item
            &:hover
                box-shadow: 0 0 10px 0 rgba(0,0,0,0.15)
                border-radius: 7px

                .showcase__actions 
                    opacity         : 1 
                    visibility      : visible 