

.buytobether
    table, hr, .cj-parcela + strong 
        display             : none 
    &__container 
        position            : fixed 
        top                 : 0 
        left                : 0 
        z-index             : 200
        width               : 100% 
        height              : 100% 
        background          : #fff 
        transform           : translate3d(100%, 0, 0)
        opacity             : 0 
        visibility          : hidden 
        transition          : transition[0]
        padding             : 45px 0 0
        .on & 
            transform       : translate3d(0, 0, 0)
            opacity         : 1 
            visibility      : visible 
        &.actived table 
            display         : table
    &__close 
        position            : fixed 
        top                 : 0 
        right               : 0
        display             : flex 
        justify-content     : center 
        align-items         : center  
        font-size           : 0
        width               : 45px
        height              : 45px    
        background          : #fff 
        border              : 0   
        &:before 
            font-icon       : url('./svg/close.svg')
            font-size       : 18px
    table 
        h3, a 
            font-size   : 13px 
            font-weight : regular 
            color       : #888888
        h3 
            display     : block
            margin      : 20px 0
        a
            display     : inline-block
        .cj-text, .cj-itens
            font-size   : 16px
        .cj-price
            display     : block 
            font-size   : 27px
            font-weight : bold 
            color       : color[0]
        .cj-parcela, .cj-parcela strong 
            font-size   : 16px
            font-weight : regular
    #lnkVejaMais
        display         : none 
    #lnkComprar
        display         : flex 
        justify-content : center 
        align-items     : center   
        width           : 200px
        height          : 45px
        margin          : 10px auto
        background      : #43C233
        color           : #fff
        font-size       : 16px
        font-weight     : semi-bold 
        text-transform  : uppercase
    .plus, .equal
        width           : 50px 
        font-size       : 33px 
        font-weight     : bold 
        background      : #fff 
        color           : color[0]
    .buy 
        text-align      : center 

@media (max-width: 991px)
    .buytobether
        .equal 
            display         : none 
        table 
            height          : 100%
            overflow-y      : auto
            padding         : 0 15px 50px
        .actived table, tr, td, th, tbody 
            display         : block 
        td
            text-align      : center 
        .itemA
            border          : solid 1px rgba(0,0,0,.1)
            border-radius   : 3px 
            padding         : 20px 
        .plus 
            display         : flex 
            justify-content : center 
            align-items     : center  
            margin          : -25px auto 0
            height          : 50px  
@media (min-width: 992px)
    .buytobether
        {container} 
        margin-top 85px
        
        table 
            width           : 100%
            max-width       : 870px
        td 
            max-width       : 250px
        &__container
            position        : static 
            visibility      : visible 
            opacity         : 1 
            transform       : none  
        