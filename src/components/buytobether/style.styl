
.buytobether
    @extend $container
    margin-top: 15px
    @media( max-width: 991px )
            width: 768px

    .slick-dots
        margin: 30px  0

    .slick-list 

        .slick-slide
            height: auto
        .slick-active
            box-shadow: 2px 0 0 #E9E9E9
            +.slick-active
                box-shadow: none

    &__inner
        padding: 40px 0;
        border-top: 1px solid #E9E9E9
        
        li 
            display: flex !important 
            justify-content: space-between

            h3 
                font-size: 13px
                color: #333333
                letter-spacing: -0.24px

    &__a
        &:before 
            content: '+'
            color: color[0]
            position: absolute
            right: 0
            top: 50%
            transform: translateY(-50%)
            font-size: 24px
            font-weight: 600

                
    &__a
    &__b
    &__buy 
        width: 100%
        padding: 0 15px
        text-align: center
        position: relative
        img 
            margin: 0 auto

    .comprar-junto a
        background: #84DD4B
        border-radius: 2px
        font-size: 16px
        color: #FFFFFF
        letter-spacing: -0.29px
        text-transform: uppercase
        font-weight: 800
        display: flex !important
        align-items: center
        justify-content: center
        height: 40px
        width: 100%
        text-shadow: 0 1px 2px #67B932
        text-decoration: none

    .cj-text
        font-size: 14px
        color: #A8A8A8
        letter-spacing: -0.25px
        line-height: 20px
        display: block

    .cj-itens
        font-size: 22px
        color: #A8A8A8
        letter-spacing: -0.25px
        line-height: 20px
        display: block
        font-weight: 400

    .cj-price
        font-size: 24px
        color: #DEB94C
        letter-spacing: -0.44px
        display: block


    .cj-parcela
        font-size: 18px
        color: #333333
        letter-spacing: -0.33px
        display:block

    .comprar-junto
        margin: 15px 0 0 0


