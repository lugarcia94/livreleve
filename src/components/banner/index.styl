.minibanner
    text-align: center
    padding-top: 86px
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
    .box-banner
        overflow hidden
    img
        display block
        margin: 0 auto
        transition: all .3s
        &:hover
            transform: scale(1.05)

.minibanner-mid
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
    .slick-active
        img
            margin-left: auto
            transition: all .3s
            &:hover
                transform: scale(1.05)
    .slick-current
        img
            margin-right: auto
            margin-left: 0
            transition: all .3s
            &:hover
                transform: scale(1.05)

.minibanner-down
    padding-bottom: 60px
    padding-top: 20px
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        overflow hidden
        
    img
        transition: all .3s
        &:hover
            transform: scale(1.05)