.banner
    text-align          : center

    img, a
        display         : inline-block


    &--header
        position        : relative
        z-index         : 30

        display         : flex
        justify-content : center
        align-items     : center
        height          : 50px

        transition      : transition[0]

        background      : #fff

        a
            display            : flex
            justify-content    : center
            align-items        : center

        .scrolling &
            transform   : translate3d(0, -50px, 0)
