.banner
    text-align          : center
    &--category 
        margin: 20px 0
    img, a
        display         : inline-block

    &--full

        .banner__container
            position    : relative
            z-index     : 10
            width       : 100%
            font-size   : 0
            white-space : nowrap
            overflow    : hidden

        .box-banner
            display     : inline-block
            width       : 100%
            overflow    : hidden

        img
            position    : relative
            left        : 50%

            min-width   : 100%
            max-width   : 150%

            transform   : translateX(-50%)

    &--mini
        @extend         $container
        position        : relative
        z-index         : 20
        transition      : transition[0]

        .banner__container
            width       : 100%
            box-sizing  : content-box
            font-size   : 0
            white-space : nowrap

            &:not(.slick-initialized)
                overflow    : hidden


        .box-banner
            display            : inline-flex
            justify-content    : center
            align-items        : center
            width              : 100%
            height             : 100%
            padding            : 15px

    &--duo
        margin          : 0 auto 30px
        max-width       : viewport + 30px

        .box-banner
            padding         : 15px


    &--header
        position        : relative
        z-index         : 30
        display         : flex
        justify-content : center
        align-items     : center
        height          : 50px
        transition      : transition[0]
        background      : #fff

        a
            display             : block
            position            : relative
            width               : 100%

        img
            position            : relative
            left                : 50%
            max-width           : calc(100% + 180px)
            transform           : translateX(-50%)

        .scrolling &
            transform   : translate3d(0, -50px, 0)

@media (min-width: 992px)
    .banner
        &--header
            img
                max-width       : 100%

        &--full

            img
                max-width       : 100%

        &--mini
            margin-top          : -50px

.mini
    &__banner
        .banner__container
            {container}
            padding: 0
            display: flex
            justify-content: space-between
            flex-wrap: wrap

            > div
                flex: 0 0 auto
                max-width: 33.333%

            @media(max-width: 768px)
                > div
                    margin: 0 auto
                    margin-bottom: 10px
                    flex: 0 0 100%

    &__valores
        border-top: solid 1px #FFE6AB
        margin: 30px 0 25px 0
        padding-top: 50px 

        @media(max-width: 768px)
            margin: 20px 0

        .header__banner
            flex: 0 0 100%!important
            font-size: 40px
            color: #434343
            text-align: left
            margin-bottom: 30px
            font-weight: 300

            strong 
                color: color[0]

        .banner__container
            {container}
            padding: 0
            display: flex
            justify-content: space-between
            flex-wrap: wrap

            > div
                flex: 0 0 auto 
                max-width: 25%
                &.header__banner
                    flex: 0 0 100%
                    max-width: none 

            @media(max-width: 768px)
                > div
                    flex: 0 0 50%
                    font-size: 30px
                    text-align: center

            @media(max-width: 425px)
                > div
                    flex: 0 0 100%

.ruler  
    &__container
        {container}
        padding: 0
        .links__list
            display: flex
            align-items: center
            flex-wrap: wrap
            justify-content: space-between

            li  
                border: 1px solid color[0]
                min-height: 58px
                flex: 0 0 25%
                display: flex
                align-items: center
                justify-content: center
                transition: all 150ms ease-in-out

                @media(max-width: 768px)
                    flex: 0 0 100%
                    margin-bottom 10px

                a  
                    font-size: 14px
                    color: #434343
                    font-weight: 600
                    transition: all 150ms ease-in-out

                &:after 
                    font-icon       : url('./svg/arrow.svg')
                    font-size       : 10px 
                    color           : color[2] 
                    margin-left     : 7px    

                &:nth-child(1),&:nth-child(2),&:nth-child(3)
                    @media(min-width: 992px)
                        border-right: none

                &:first-child
                    &:before
                        font-icon       : url('./svg/entrega.svg')
                        font-size       : 20px
                        margin-right    : 5px
                        color           :color[2]
                        transition      : all 150ms ease-in-out

                &:nth-child(2)
                    &:before
                        font-icon       : url('./svg/desconto.svg')
                        font-size       : 20px
                        margin-right    : 5px
                        color           :color[2]
                        transition      : all 150ms ease-in-out

                &:nth-child(3)
                    &:before
                        font-icon       : url('./svg/dica.svg')
                        font-size       : 20px
                        margin-right    : 5px
                        transition      : all 150ms ease-in-out
                        color           :color[2]

                &:nth-child(4)
                    &:before
                        font-icon       : url('./svg/surpresas.svg')
                        font-size       : 20px
                        margin-right    : 5px
                        color           :color[2]
                        transition      : all 150ms ease-in-out

                &:hover
                    background: color[2]

                    &:before,&:after
                        color: #fff

                    a  
                        color: #fff
                        text-decoration: none

.mini__banner 
    margin: 15px 0 60px

.ruler__link 
    margin-bottom: 60px
