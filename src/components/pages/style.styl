#editar-perfil
    position: fixed
    display: inline-block !important
    padding: 20px
    margin: 0
    font-size: 13px
    flex: 1 1 auto

    background: #ffffff

    z-index: 100

    top: 50%
    left: 50%

    transform: translate(-50%, -50%) scale(1)
    width: 100%
    height: 100%
    overflow: auto
    transition: all .2s ease-in-out

    &[aria-hidden=true]
        visibility: hidden
        opacity: 0
        transform: translate(-50%, -50%) scale(.5)

    #myModalLabel
        display: none

    .close
        position: absolute
        top: 0
        right: 0
        padding: 0
        width: 40px
        height: 40px
        font-size: 22px
        font-weight: 700


    #profile-submit, .btn-link
        @extend $buttonAccount
        margin: 10px 0
        border: 0

    #profile-submit
        background: color[0]
        color: #222

    .btn-link
