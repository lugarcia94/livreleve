//Account
$buttonAccount
    height: 35px
    line-height: 35px

    background: color[1]
    color: #ffffff

    display: inline-block
    padding: 0 20px
    border-radius: 3px
    margin: 10px 0

    text-transform: uppercase
    font-weight: 500

    &:hover
        background: color[0]
        text-decoration: none

.profile-detail-display
    display: inline-block
    padding: 20px
    font-size: 13px
    margin: 0

    h4
        font-size: 24px

    h5
        font-size: 16px

.profile-detail-display-info
