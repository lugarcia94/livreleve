.labels
    &-discount 
        display         : none
    &--collection
        position        : absolute
        bottom          : 0
        left            : 50%

        transform       : translateX(-50%)

    .flag
        display         : inline-block

        font-size       : 15px
        font-weight     : bold

        text-transform  : uppercase

        background      : rgba(0,0,0,.4)
        color           : #fff
        padding         : 2px 10px

        border-radius   : 2px

    .novidade
        font-size: 15px
        color: #FFFFFF
        letter-spacing: -0.27px
        text-shadow: 0 1px 2px #EBC85E
        font-weight: 800
        background: #FFDB6F
        border-radius: 2px

    &__item--percent
        display         : none
        justify-content : center
        align-items     : center
        flex-wrap       : wrap

        background      : #FF4A4A
        position        : absolute
        top             : 0
        right           : 0

        padding         : 8px 0

        font-size       : 12px
        font-weight     : bold
        line-height     : 1

        width           : 40px
        height          : 40px

        border-radius   : 50%
        color           : #fff

        &:after
            content     : 'OFF'
            font-weight : regular
            flex        : 0 0 100%

        &.on
            display     : flex