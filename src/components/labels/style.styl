.labels
    &--showcase
        position        : absolute
        bottom          : 0
        left            : 50%

        transform       : translateX(-50%)

    .flag
        display         : inline-block

        font-size       : 15px
        font-weight     : bold

        text-transform  : uppercase

        background      : rgba(0,0,0,.4)
        color           : #fff
        padding         : 2px 10px

        border-radius   : 2px

    .novidade
        font-size: 15px
        color: #FFFFFF
        letter-spacing: -0.27px
        text-shadow: 0 1px 2px #EBC85E
        font-weight: 800
        background: #FFDB6F
        border-radius: 2px