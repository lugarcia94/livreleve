.labels
    &-discount 
        display         : none
    &--collection
        position        : absolute
        bottom          : 0
        left            : 50%
        display         : flex 
        flex-wrap       : wrap
        width           : 100%

        transform       : translateX(-50%)

    .flag
        flex            : 0 0 auto
        display         : inline-block

        font-size       : 11px
        font-weight     : bold

        text-transform  : uppercase

        background      : rgba(0,0,0,.4)
        color           : #fff
        padding         : 5px 10px

        border-radius   : 5px
        margin          : 3px 

    .novidade
        background: #FFB200

    .frete-gratis
        background: #7ABE66

    .mais-vendidos
        background: #FF7000
    
    .entrega-imediata
        background: #434343

    &__item
        &--discount
            display         : none 
        &--percent
            display         : none
            justify-content : center
            align-items     : center
            flex-wrap       : wrap

            background      : #FF4A4A
            position        : absolute
            top             : 0
            right           : 0

            padding         : 8px 0

            font-size       : 12px
            font-weight     : medium 
            line-height     : 1

            width           : 40px
            height          : 40px

            border-radius   : 50%
            color           : #fff

            &:after
                content     : 'OFF'
                font-weight : medium
                flex        : 0 0 100%

            &.on
                display     : flex